<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/preferences_notification_level_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferences_notification_level_text" />

        <Spinner
            android:id="@+id/preferences_notification_level_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/preferences_polling_interval_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10px"
            android:text="@string/preferences_polling_interval_text" />

        <Spinner
            android:id="@+id/preferences_polling_interval_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
	    