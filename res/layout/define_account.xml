<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="bottom"
		android:padding="10dp">
		<TextView  
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content"
		    android:text="@string/define_account_desc"/>
		<EditText android:id="@+id/define_account_nickname"
			android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/define_account_nickname"/>
		<EditText android:id="@+id/define_account_username"
			android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/define_account_username"/>
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:padding="10dp">
		<Button android:id="@+id/define_account_new_button" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:text="@string/define_account_new_button"/>
		<Button android:id="@+id/define_account_existing_button" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:text="@string/define_account_existing_button"/>
	</LinearLayout>
</LinearLayout>
